    "version": "0.2.0",
    "configurations": [

        {
            "name": "(gdb) test_menu",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/output/simplermenu_plus",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${fileDirname}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "Set Disassembly Flavor to Intel",
                    "text": "-gdb-set disassembly-flavor intel",
                    "ignoreFailures": true
                }
            ]
        }

    ],
    "makefile.launchConfigurations": [
        {
            "cwd": "${workspaceFolder}/output",
            "binaryPath": "${workspaceFolder}/output/simplermenu_plus",
            "binaryArgs": []
        }
    ],
}
